<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchInputLayout"
    style="@style/SearchInput.TextInputLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_search_height">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/searchInput"
        style="@style/SearchInput.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/input_search_background"
        android:hint="@string/input_search_hint"
        android:inputType="text"
        android:textColor="@color/inputSearchText"
        android:textColorHighlight="@null" />
</com.google.android.material.textfield.TextInputLayout>