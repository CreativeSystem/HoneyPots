<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="fontFamily">@font/ubuntu_bold</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:navigationBarColor">@color/backgroundSplash</item>
        <item name="android:statusBarColor">@color/backgroundSplash</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="BottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/botNavItemTint</item>
        <item name="itemTextColor">@color/botNavItemTint</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="FloatingButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/floatingButtonBG</item>
        <item name="tint">@color/floatingButtonTint</item>
        <item name="rippleColor">@color/floatingButtonRipple</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="FeedTopAppBar" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="ProfileOption" parent="">
        <item name="android:background">@drawable/profile_option_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ProfileOptionIcon" parent="">
        <item name="android:tint">@color/text</item>
    </style>

    <style name="ProfileOptionText" parent="">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="itemListFeed" parent="">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>
</resources>